rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Usuários: cada um só pode ler/escrever seu próprio documento
    // Professores também podem ler dados de seus alunos
    match /usuarios/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      // Permite que professores leiam dados de alunos vinculados
      allow read: if isAuthenticated() && 
        resource.data.tipo == 'aluno' && 
        resource.data.professorId == request.auth.uid;
      // Permite que professores listem seus alunos
      allow list: if isAuthenticated();
    }

    // Professores: leitura/listagem pública, escrita só autenticado dono
    match /professores/{userId} {
      allow read, list: if true; // Permite leitura/listagem para todos, inclusive não autenticados
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Alunos: o próprio aluno pode criar e visualizar,
    // apenas o professor vinculado pode ler, editar e excluir o aluno
    match /alunos/{userId} {
      allow create, read: if isAuthenticated() && isOwner(userId);
      allow read, list: if isAuthenticated() && resource.data.professorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.professorId == request.auth.uid;
    }

    // Aulas: o professor pode criar, ler, atualizar e excluir aulas dos seus alunos
    // o aluno pode ler suas próprias aulas
    // professores podem listar aulas para gerenciamento
    match /aulas/{aulaId} {
      // Professor pode gerenciar todas as aulas que ele criou
      allow read, update, delete: if isAuthenticated() && resource.data.professorId == request.auth.uid;
      
      // Professores podem listar suas próprias aulas
      allow list: if isAuthenticated() && resource.data.professorId == request.auth.uid;
      
      // Aluno pode ler e listar suas próprias aulas
      allow read, list: if isAuthenticated() && resource.data.alunoId == request.auth.uid;
      
      // Para criação (quando resource.data ainda não existe), verificar se é o professor correto
      allow create: if isAuthenticated() && request.resource.data.professorId == request.auth.uid;
    }

    // Postagens: o professor pode criar, ler, atualizar e excluir suas postagens
    // o aluno pode ler as postagens destinadas a ele
    match /postagens/{postagemId} {
      // Professor pode gerenciar todas as postagens que ele criou
      allow read, update, delete: if isAuthenticated() && resource.data.professorId == request.auth.uid;
      
      // Professores podem listar suas próprias postagens
      allow list: if isAuthenticated() && resource.data.professorId == request.auth.uid;
      
      // Aluno pode ler postagens onde ele está na lista de destinatários
      allow read: if isAuthenticated() && request.auth.uid in resource.data.alunosDestino;
      
      // Alunos podem listar postagens onde estão incluídos
      allow list: if isAuthenticated() && request.auth.uid in resource.data.alunosDestino;
      
      // Para criação, verificar se é o professor correto
      allow create: if isAuthenticated() && request.resource.data.professorId == request.auth.uid;
    }
  }
}
